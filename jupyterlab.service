[Unit]
Description=JupyterLab Server
After=network.target

[Service]
Type=simple
User=laurent
WorkingDirectory=/home/laurent
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
ExecStart=/usr/local/bin/jupyter lab --ip=0.0.0.0 --port=8888 --no-browser --allow-root --NotebookApp.token='' --NotebookApp.password=''
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
